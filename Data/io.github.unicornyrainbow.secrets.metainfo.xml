<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.unicornyrainbow.secrets</id>

  <name>Key Cutter</name>
  <summary>Easily generate passwords based on your needs</summary>
  
  <metadata_license>FSFAP</metadata_license>
  <project_license>AGPL-3.0-only</project_license>

  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <categories>
    <category>Office</category>
    <category>Utility</category>
  </categories>

  <keywords>
    <keyword translate="no">passwords</keyword>
    <keyword translate="no">password</keyword>
    <keyword translate="no">generator</keyword>
  </keywords>

  <description>
    <p>
      Easily generate passwords based on your needs, from a simple, Gtk 4 and Libadwaita based app.
    </p>
  </description>

  <url type="homepage">https://unicornyrainbow.github.io/Secrets/</url>
  <launchable type="desktop-id">io.github.unicornyrainbow.secrets.desktop</launchable>
  <screenshots>
