      <image>https://unicornyrainbow.github.io/Secrets/assets/secrets.png</image>
    </screenshot>
    <screenshot>
      <image>https://unicornyrainbow.github.io/Secrets/assets/secrets_dark.png</image>
    </screenshot>
  </screenshots>

